	<!-- 
		You can add multiple paths here, seperate them with comma. 
		e.g. addpath="/components/com_payplans/elements, /components/com_docman/elements" 
	-->
	<params addpath="/components/com_payplans/elements">
		<param	name="merchant" 	
				default="" 		
				type="text" 	
				size="50" 
				label="COM_PAYPLANS_APP_ALERTPAY_MERCHANT_EMAIL"  
				description="COM_PAYPLANS_APP_ALERTPAY_EMAIL_MERCHANT_DESC" 
				class="email"
				/>
								
		<param  name="currency" 		
				default="USD" 	
				type="currency" 
				size="10" 
				label="COM_PAYPLANS_APP_ALERTPAY_CURRENCY" 
				description="COM_PAYPLANS_APP_ALERTPAY_CURRENCY_DESC" 
				global="true"
				/>
				
		<param  type="spacer" 
		  		default="COM_PAYPLANS_APP_ALERTPAY_SANDBOX_TESTING" 
		  		/>
		  		
     	<param  name="sandbox" 
        		type="radio" 
        		default="0" 
        		label="COM_PAYPLANS_APP_ALERTPAY_SANDBOX" 
        		description="COM_PAYPLANS_APP_ALERTPAY_SANDBOX_DESC">
		          <option value="0">COM_PAYPLANS_NO</option>
		          <option value="1">COM_PAYPLANS_YES</option>
        		</param>      		
	</params>

